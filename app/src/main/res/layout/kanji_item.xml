<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    app:cardCornerRadius="8dp"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="5dp">

    <RelativeLayout
        android:id="@+id/rlKanjisym"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginVertical="6dp"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/kanjiTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:text="é›¨"
            android:textColor="@color/black"
            android:textSize="60sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/kanjiTextView"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp">

            <RelativeLayout
                android:id="@+id/rlmeaning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:paddingVertical="5dp">

                <TextView
                    android:id="@+id/tvmeaning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/meaning"
                    android:layout_centerVertical="true"
                    />

                <TextView
                    android:id="@+id/tveditmeaning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tvmeaning"
                    android:text="Rain"
                    android:layout_marginHorizontal="5dp"
                    android:background="@drawable/rectangle"
                    android:padding="3dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rlmeaning"
                android:paddingVertical="5dp">

                <TextView
                    android:id="@+id/tvjlpt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/jlpt_level"
                    />

                <TextView
                    android:id="@+id/tveditjlpt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tvjlpt"
                    android:text="1"
                    android:layout_marginHorizontal="5dp"/>

            </RelativeLayout>

        </RelativeLayout>



    </RelativeLayout>


</androidx.cardview.widget.CardView>